{% extends 'EmptyPage.html.twig' %}


{% block pageBody %}
    <style>
        .navbar-nav>li>a, .cp
        {
            padding-top: 25px;
        }
    </style>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('home') }}">
                    <img alt="Brand" src="{{ asset('logo.png') }}">
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="{{ path('home') }}">صفحه نخست</a>
                    </li>
                    <li>
                        <a href="#">خدمات</a>
                    </li>
                    <li>
                        <a href="#">همکاری با ما</a>
                    </li>
                    <li>
                        <a href="#">وبلاگ</a>
                    </li>
                    <li>
                        <a href="#">تماس با ما</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {% if userMgr.isLogedIn() == false %}
                        <li><a  href="{{ path('userLogin') }}">ورود کاربران</a></li>
                        <li><a  href="{{ path('userRegister') }}">عضویت و ثبت سفارش</a></li>
                    {% endif %}
                    {% if userMgr.isLogedIn() == true %}
                        {% set userInfo = userMgr.getThisUserInfo() %}

                        <li class=""><a href="{{ path('home') }}"> <span class="glyphicon glyphicon-comment"></span>  0  </a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                {{ userInfo.fullName }}
                                <span class="glyphicon glyphicon-user"></span>
                                <span class="caret"></span></a>
                            <ul class="dropdown-menu">

                                <li><a href="{{ path('home') }}">پروفایل شما<span class="glyphicon glyphicon-star"></span></a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="{{ path('home') }}">سفارشات<span class="glyphicon glyphicon-plus-sign"></span></a></li>
                                <li><a href="{{ path('home') }}">تراکنش‌ها<span class="glyphicon glyphicon-import"></span></a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="{{ path('userLogout') }}">  خروج <span class="glyphicon glyphicon-log-out"></span></a></li>
                            </ul>
                        </li>
                    {% endif %}
                </ul>

            </div><!--/.nav-collapse -->

        </div>
    </div>
    <div class="container container-fluid" style="padding-up: 55px">
        <div class="row" STYLE="padding-top: 55px;" >
            {% block upMenu %}
            {% endblock %}
        </div>
    </div>
    <div class="container container-fluid">
        <div class="row mainbody" style="padding-top: 25px">
            {% block alert %}
                {% if alerts is defined %}
                    {%  for alert in alerts %}
                        <div class="alert alert-{{ alert.type }}" role="alert">
                            <ul>
                                <li>{{ alert.message }}</li>
                            </ul>
                        </div>
                    {% endfor %}
                {% endif %}
            {% endblock %}
        </div>
    </div>
    <div class="container container-fluid" style="padding-top: 0px">
        <div class="row">
            {% block body %}
            {% endblock %}
        </div>
    </div>
    <div class="navbar navbar-inverse navbar-fixed-bottom">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    {% if userMgr.ThisUserHasPermission('adminAccess') %}
                        <li class="">
                            <a href="{{ path('adminDashboard') }}">پنل مدیریت</a>
                        </li>
                    {% endif %}

                    <li class="">
                        <a>پنل مترجمان</a>
                    </li>
                    <li class="">
                        <a>آخرین سفارشات</a>
                    </li>
                    <li class="">
                        <a>وبلاگ</a>
                    </li>
                    <li class="">
                        <a>درباره ما</a>
                    </li>
                    <li class="">
                        <a>شرایط و قوانین ارائه خدمات</a>
                    </li>

                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>
 
    <script language="JavaScript">
        function show_time_1(){
            d=new Date();
            H=d.getHours();H=(H<10)?"0"+H:H;
            i=d.getMinutes();i=(i<10)?"0"+i:i;
            s=d.getSeconds();s=(s<10)?"0"+s:s;
            document.getElementById('show_time_1').innerHTML="ساعت : " + H+":"+i+":"+s;
            setTimeout("show_time_1()",1000);/* 1 sec */
        } show_time_1();
    </script>
{% endblock %}


