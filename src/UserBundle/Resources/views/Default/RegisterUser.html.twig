{% extends 'base.html.twig' %}
{% block title %}عضویت{% endblock %}
{% block body %}


    <div class="row">
        <div class="col-md-8 col-centered">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        عضویت در سایت
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="alert alert-info">
                                جهت ثبت سفارش ابتدا عضویت خود را تکمیل نمایید.
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        {{ form_start(form) }}
                        <div class="col-xs-12 col-md-4 col-sm-4">
                            {{ form_label(form.username) }}
                            {{ form_widget(form.username) }}
                        </div>
                        <div class="col-xs-12 col-md-4 col-sm-4">
                            {{ form_label(form.password) }}
                            {{ form_widget(form.password) }}
                        </div>
                        <div class="col-xs-12 col-md-4 col-sm-4">
                            {{ form_label(form.repassword) }}
                            {{ form_widget(form.repassword) }}
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-xs-12 col-md-6 col-sm-6">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email) }}
                        </div>
                        <div class="col-xs-12 col-md-6 col-sm-6">
                            {{ form_label(form.company) }}
                            {{ form_widget(form.company) }}
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-xs-3 col-md-3 col-sm-3">
                            {{ form_label(form.nameUser) }}
                            {{ form_widget(form.nameUser) }}
                        </div>
                        <div class="col-xs-3 col-md-3 col-sm-3">
                            {{ form_label(form.tel) }}
                            {{ form_widget(form.tel) }}
                        </div>
                        <div class="col-xs-3 col-md-3 col-sm-3">
                            {{ form_label(form.mobile) }}
                            {{ form_widget(form.mobile) }}
                        </div>
                        <div class="col-xs-3 col-md-3 col-sm-3">
                            {{ form_label(form.field) }}
                            {{ form_widget(form.field) }}
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-md-3">
                            {{ form_label(form.save) }}
                            {{ form_widget(form.save) }}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

    </div>


{% endblock %}
