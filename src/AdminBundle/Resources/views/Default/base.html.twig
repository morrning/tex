{% extends 'EmptyPage.html.twig' %}
{% block title %}{% block adminTitle %}{% endblock %}{% endblock %}

{% block pageBody %}
    <style>
        .navbar-nav>li>a, .cp
        {
            padding-top: 25px;
        }
    </style>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('home') }}">
                    <img alt="Brand" src="{{ asset('logo.png') }}">
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="{{ path('adminDashboard') }}">داشبورد مدیریت</a>
                    </li>
                    <li>
                        <a href="#">خدمات</a>
                    </li>
                    <li>
                        <a href="#">همکاری با ما</a>
                    </li>
                    <li>
                        <a href="#">وبلاگ</a>
                    </li>
                    <li>
                        <a href="#">تماس با ما</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    {% if userMgr.isLogedIn() == false %}
                        <li><a  data-toggle="modal" data-target="#myModal">ورود کاربران</a></li>
                        <li><a  href="{{ path('userRegister') }}">عضویت و ثبت سفارش</a></li>
                    {% endif %}
                    {% if userMgr.isLogedIn() == true %}
                        {% set userInfo = userMgr.getThisUserInfo() %}

                        <li class=""><a href="{{ path('home') }}"> <span class="glyphicon glyphicon-comment"></span>  0  </a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                {{ userInfo.fullName }}
                                <span class="glyphicon glyphicon-user"></span>
                                <span class="caret"></span></a>
                            <ul class="dropdown-menu">

                                <li><a href="{{ path('home') }}">پروفایل شما<span class="glyphicon glyphicon-star"></span></a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="{{ path('home') }}">سفارشات<span class="glyphicon glyphicon-plus-sign"></span></a></li>
                                <li><a href="{{ path('home') }}">تراکنش‌ها<span class="glyphicon glyphicon-import"></span></a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="{{ path('userLogout') }}">  خروج <span class="glyphicon glyphicon-log-out"></span></a></li>
                            </ul>
                        </li>
                    {% endif %}
                </ul>

            </div><!--/.nav-collapse -->

        </div>
    </div>
    <div class="container container-fluid" style="padding-top: 85px">
        <div class="row" >
            {% block upMenu %}
            {% endblock %}
        </div>
        <div class="row" >
            <div class="col-md-3">

                <div class="panel panel-info">
                    <div class="panel-heading">اطلاعیه ها</div>
                    <div class="panel-body">

                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        {% block adminTitle %}
                    </div>
                    <div class="panel-body">
                        {% block adminContent %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}