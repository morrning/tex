{% extends 'base.html.twig' %}
{% block title %}{% block AppPageTitle %}{% endblock %}{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-3">
            <div class="panel panel-success">
                <div class="panel-heading" style="background-color: green">
                    <div class="panel-title" style="color: white">
                        تازه‌ترین نوشته‌ها
                    </div>
                </div>
                <div class="panel-body">
                    {% for blogpost in blogposts %}
                        <li><a class="alert-link" href="{{ path('blogPost',{'id':blogpost.SID}) }}">{{ blogpost.title }}</a></li>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-md-9">
            {% block AppPageBody %}{% endblock %}
        </div>
    </div>
{% endblock %}
